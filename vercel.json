{
  "version": 2,
  "env": {
    "NEXT_PUBLIC_API_URL": "https://api.taodandewukong.pro",
    "NEXT_PUBLIC_SITE_URL": "https://taodandewukong.pro",
    "NEXT_PUBLIC_SITE_NAME": "Tạo Dàn Đề"
  },
  "functions": {
    "pages/api/**/*.js": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/home",
      "destination": "/",
      "permanent": true
    }
  ]
}
