# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# ==========================================
# Site Configuration
# ==========================================
NEXT_PUBLIC_SITE_URL=https://taodandewukong.pro
NEXT_PUBLIC_SITE_NAME=Tạo Dàn Đề Wukong

# ==========================================
# API Configuration
# ==========================================
NEXT_PUBLIC_API_URL=https://api.taodandewukong.pro

# ==========================================
# Google Services
# ==========================================
# Get from: https://analytics.google.com/
NEXT_PUBLIC_GA4_ID=G-XXXXXXXXXX

# Get from: Google Search Console
NEXT_PUBLIC_GSC_VERIFICATION=your_google_verification_code_here

# ==========================================
# Bing Webmaster Tools
# ==========================================
# Get from: https://www.bing.com/webmasters/
NEXT_PUBLIC_BING_VERIFICATION=your_bing_verification_code_here
NEXT_PUBLIC_BING_SITE_VERIFICATION=your_bing_site_verification_code_here

# ==========================================
# Facebook Pixel
# ==========================================
# Get from: https://business.facebook.com/
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=your_facebook_pixel_id_here

# ==========================================
# Bing Ads/UET
# ==========================================
# Get from: https://bingads.microsoft.com/
NEXT_PUBLIC_BING_UET_ID=your_bing_uet_id_here

# ==========================================
# Cốc Cốc
# ==========================================
# Get from: https://www.coccoc.com/
NEXT_PUBLIC_COCCOC_VERIFICATION=your_coccoc_verification_code_here
NEXT_PUBLIC_COCCOC_ANALYTICS_ID=your_coccoc_analytics_id_here

# ==========================================
# Yandex
# ==========================================
# Get from: https://webmaster.yandex.com/
NEXT_PUBLIC_YANDEX_VERIFICATION=your_yandex_verification_code_here

# ==========================================
# Baidu
# ==========================================
# Get from: https://ziyuan.baidu.com/
NEXT_PUBLIC_BAIDU_VERIFICATION=your_baidu_verification_code_here

# ==========================================
# Server-side API (Backend)
# ==========================================
API_BASE_URL=https://api.taodandewukong.pro
API_SECRET_KEY=your_api_secret_key_here

# ==========================================
# Database
# ==========================================
MONGODB_URI=your_mongodb_connection_string_here
DB_NAME=taodandewukong

# ==========================================
# JWT
# ==========================================
JWT_SECRET=your_jwt_secret_here

# ==========================================
# Other Services
# ==========================================
REDIS_URL=your_redis_url_here
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password

